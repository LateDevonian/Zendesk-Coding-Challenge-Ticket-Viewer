<% if @error %>
  <h3><%= @error %></h3>
<%end%>

<% if @ticket %>
<h1>Ticket details:</h1>
  <h3>Ticket number: </h3><p><%= @ticket["id"]%></p>
  <h3>Subject: </h3><p><%= @ticket["subject"]%></p>
  <h3>Description: </h3><p><%= @ticket["description"]%></p>
  <h3>Submitted id: </h3><p><%= @ticket["submitter_id"]%></p>
  <h3>Submitted name: </h3><p><%= @ticket["submitter_name"]%></p>


  <% if @ticket["type"] != nil %>
   <h3>Type: </h3><p><%= @ticket["type"] %></p>
   <% else %>
   <h3>Type: </h3><p>Type has not been set</p>
   <% end %>

  <% if @ticket["priority"] != nil %>
    <h3>Priority: </h3><p><%= @ticket["priority"] %></p>
  <% else %>
    <h3>Priority: </h3><p>Priority has not been set</p>
  <% end %>

  <h3>Status: </h3><p><%= @ticket["status"] %></p>
  <h3>Last updated: </h3><p><%= @ticket["updated_at"]%></p>

  <% if @ticket["assignee_id"] = !nil %>
    <% @ticket["assignee_id"] = @id %>
    <h3>Assignee: </h3><p><%= @id %></p>
  <% else %>
    <h3>Assignee: </h3><p>This ticket is not assigned</p>
  <% end %>
  <br>
  <a href="/tickets">Back to Tickets</a>

<%end%>
