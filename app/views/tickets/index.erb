<html>
  <body>
    <h1>Your tickets</h1>
    <p>Please click on the ticket to view ticket  <p>

    <% if @tickets.present? %>
    <br>
    <%= will_paginate @tickets %>
    <br>
      <table>
        <thead>
          <tr>
            <th>Subject</th>
          </tr>
        </thead>

        <tbody>
          <%@tickets.each do |ticket| %>
          <tr>
            <td><a href="/tickets/<%= ticket["id"] %>"><%= ticket["id"] %>&nbsp;<%= ticket["subject"]%></a></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= will_paginate @tickets %>
      <br>

        <% else %>
         <p> It seems you have no tickets or soemthing went wrong <p>
      <% end %>



  </body>
</html>
