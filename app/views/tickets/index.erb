<% if @error %>
  <h3><%= @error %></h3>
<%end%>

<% if @tickets %>
  <h1>Your tickets</h1>
    <p>Please click on the ticket subject to view ticket  <p>

    <%= will_paginate @tickets %>
    <br>
      <table>
        <thead>
          <tr>
            <th>Subject</th>
          </tr>
        </thead>

        <tbody>
          <%@tickets.each do |ticket| %>
          <tr>
            <td><a href="/tickets/<%= ticket["id"] %>"><%= ticket["id"] %>&nbsp;<%= ticket["subject"]%></a></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= will_paginate @tickets %>
      <br>
    <%end%>
